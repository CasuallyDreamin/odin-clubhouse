<h1 class="page-title">Feed</h1>

<div class="post-list">
  <% if (posts.length === 0) { %>
    <p class="muted-text">No posts yet.</p>
  <% } %>

  <% posts.forEach(post => { %>
    <button class="post-card" onClick="location.href='/posts/<%= post.id %>'">
      <h2><a href="/posts/<%= post.id %>"><%= post.title %></a></h2>
      <div class="post-meta">
        <% if (user) { %>
          <span class="author">by <%= post.username %></span> â€¢ 
        <% } %>
        <span><%= post.created_at.toLocaleDateString() %></span>
      </div>
    </button>
  <% }) %>
</div>
